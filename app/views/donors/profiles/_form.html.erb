<%= form_with(model: donor, url: donors_profile_path(@donor.id), method: :patch, data: { turbo: false }) do |form| %>
  <% if donor.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(donor.errors.count, "error") %> prohibited this donor from being saved:</h2>

      <ul>
        <% donor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 10px;">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: 'txt-social' %>
  </div>

  <div style="margin-bottom: 10px;">
    <%= form.label :d_type, style: "display: block" %>
    <%= form.select(:d_type, Donor.d_types.keys.map { |w| [w.humanize, w] }, {}, {class: 'txt-social'}) %>
  </div>

  <div style="margin-bottom: 10px;">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class: 'txt-social' %>
  </div>

  <div style="margin-bottom: 10px;">
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password, class: 'txt-social' %>
  </div>

  <div style="margin-bottom: 10px;">
    <%= form.label :password_confirmation, style: "display: block" %>
    <%= form.password_field :password_confirmation, class: 'txt-social' %>
  </div>

  <div style="margin-bottom: 10px;">
    <%= form.label :bio, style: "display: block" %>
    <%= form.text_area :bio, class: 'txt-social' %>
  </div>

  <div>
    <%= form.submit 'Update', class: 'btn-social' %>
  </div>
<% end %>
